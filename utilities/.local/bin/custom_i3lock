#!/bin/sh

BASE00=292B2E
DARK00=212026
BASE01=484848
BASE02=5D4D7A
DARK02=444155
BASE03=5B5B5B
BASE04=A3A3A3
BASE05=B8B8B8
BASE06=E8E8E8
BASE07=F8F8F8
BASE08=F2241F
BASE09=FFA500
BASE0A=B1951D
BASE0B=67B11D
BASE0C=2D9574
BASE0D=4F97D7
BASE0E=734D79
BASE0F=B03060

COLORS="$BASE00\n$DARK00\n$BASE01\n$BASE02\n$DARK02\n$BASE03\n$BASE05\n$BASE07\n$BASE08\n$BASE09\n$BASE0B\n$BASE0D\n$BASE0E\n$BASE0F"

COLOR=$(echo -e $COLORS | sort -R | head -n1)

FEH_BG=$HOME/.fehbg
WALLPAPER=$(cat $FEH_BG | tail -n1 | cut -d " " -f 3 | sed -r "s/'(.*)'/\1/")
i3lock -i "$WALLPAPER" --color=$COLOR

