exec $HOME/.fehbg
exec setxkbmap -option caps:swapescape
# exec cbatticon
exec nm-applet
exec xss-lock -- custom_i3lock
exec dunst

mouse_warping none

# Media player controls
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# bindsym $mod+o exec /home/reuben/.i3/switch-to-org-workspace.sh
bindsym $mod+b exec $HOME/.local/bin/random-desktop

client.focused #$base02 #$base02 #$base05
client.focused_inactive #$base00 #$base00 #$base0E
client.unfocused #$base00 #$base00 #$base0E
